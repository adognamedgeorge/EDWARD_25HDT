/* pages/mall/mall.wxss */
.page {
  padding: 0 20rpx;
}

.top {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
}

.top_lf {
  position: relative;
  flex: .9;
}

.lf_input {
  background-color: #dbdbdb;
  border-radius: 40rpx;
  padding: 10rpx 40rpx;
  font-size: 30rpx;
}

.lf_img {
  position: absolute;
  top: 12rpx;
  right: 30rpx;
}

.lf_img, .top_rt {
  width: 50rpx;
  height: 50rpx;
}

.rt_img {
  width: 100%;
  height: 100%;
}

.swiper_box {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0rpx 10rpx 20rpx 5rpx grey;
}

.swiper_item, .swiper_img {
  width: 100%;
  height: 100%;
}

.coupon {
  width: 100%;
  height: 260rpx;
  background-color: #dbdbdb;
  border-radius: 40rpx;
  margin-top: 40rpx;
  box-shadow: 0 10rpx 30rpx 5rpx grey;
}

.goods {
  margin: 40rpx 0;
}

.goods_title {
  margin: 40rpx 0;
  padding: 0 10rpx;
  font-weight: bold;
}

.flex_box {
  display: flex;
  justify-content: space-around;
  width: 100%;
  flex-wrap: wrap;
  align-items: center;
}

.flex_content {
  width: 24%;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.img_box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.flex_img {
  width: 100%;
  height: 100%;
}